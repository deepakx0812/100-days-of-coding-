#include <stdio.h>

enum Gender {
    MALE,
    FEMALE,
    OTHER
};

struct Person {
    char name[50];
    enum Gender gender;
};

int main() {
    struct Person p;
    int choice;

    printf("Enter name: ");
    scanf("%s", p.name);

    printf("Select Gender (0=Male, 1=Female, 2=Other): ");
    scanf("%d", &choice);

    if (choice == 0)
        p.gender = MALE;
    else if (choice == 1)
        p.gender = FEMALE;
    else
        p.gender = OTHER;

    printf("\n--- Person Details ---\n");
    printf("Name: %s\n", p.name);

    printf("Gender: ");
    if (p.gender == MALE)
        printf("Male\n");
    else if (p.gender == FEMALE)
        printf("Female\n");
    else
        printf("Other\n");

    return 0;
}
