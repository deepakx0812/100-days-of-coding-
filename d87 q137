#include <stdio.h>

enum Role {
    ADMIN,
    USER,
    GUEST
};

int main() {
    enum Role r;
    r = USER;

    switch (r) {
        case ADMIN:
            printf("Welcome, Admin! You have full access.\n");
            break;

        case USER:
            printf("Hello, User! You have limited access.\n");
            break;

        case GUEST:
            printf("Hi, Guest! You can view public content only.\n");
            break;

        default:
            printf("Invalid role.\n");
    }

    return 0;
}
